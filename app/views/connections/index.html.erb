<h1>Listing your connections</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Firm</th>
    <th>Last Contacted</th>
    <th>Other Info</th>
    <th colspan="3"></th>
  </tr>
 
  <% @connections.each do |connection| %>
    <tr>
      <td><%= connection.first_name %> <%= connection.last_name %></td>
      <td><%= connection.firm %></td>
      <td><%= connection.last_contacted %></td>
      <td><%= connection.other_info %></td>
      <td><%= link_to 'Show', connection_path(connection) %></td>
      <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
      <td><%= link_to 'Delete', connection_path(connection),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New connection', new_connection_path %>">